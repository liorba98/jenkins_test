pipeline {
   agent { docker {
      image 'centos/python-36-centos7'
      args '-v /:/'
      }
   }

   stages {
      stage('build') {
          steps {
              echo 'building'
              }
            }
            }
      stage('test') {
          steps {
              sh 'pip install flask'
              sh 'python /my_app.py'
              sh 'curl -i http://192.168.1.20:5000/hello/'
              }
            }
      }
   }
